@model RateVM
@{ Layout = null;}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameBeverage" class="control-label"></label>
                <input asp-for="NameBeverage" class="form-control" />
                <span asp-validation-for="NameBeverage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityBeverage" class="control-label"></label>
                <input asp-for="QuantityBeverage" class="form-control" />
                <span asp-validation-for="QuantityBeverage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmallDescription" class="control-label"></label>
                <input asp-for="SmallDescription" class="form-control" />
                <span asp-validation-for="SmallDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label col-form-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeBeverage" class="control-label"></label>
                <input asp-for="AgeBeverage" class="form-control" />
                <span asp-validation-for="AgeBeverage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>